{
	"name": "rakoitde/ci4-tools",
	"description": "Tools for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"tools"
	],
	"homepage": "https://www.rakoitde.github.io",
	"license": "",
	"authors": [
		{
			"name": "Ralf Kornberger",
			"email": "rakoitde@gmail.com",
			"homepage": "https://www.rakoitde.github.io",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		}
	],
	"require": {
		"php" : ">=7.4"
	},
	"minimum-stability": "dev",
	"prefer-stable": false,
	"require-dev": {
		"phpunit/phpunit": "^8.5",
		"phpstan/phpstan": "1.7.x-dev",
		"squizlabs/php_codesniffer": "^3.5",
		"codeigniter4/codeigniter4-standard": "^1.0",
		"codeigniter4/framework": "dev-master",
		"codeigniter4/codeigniter4": "4.x-dev"
	},
	"autoload": {
		"psr-4": {
			"Rakoitde\\Tools\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"analyze": "./vendor/bin/phpstan analyse src tests",
		"style": "phpcbf --standard=./vendor/codeigniter4/codeigniter4-standard/CodeIgniter4 src/ tests/",
		"test": "phpunit",
		"post-update-cmd": [
			"composer dump-autoload"
		]
	}
}
